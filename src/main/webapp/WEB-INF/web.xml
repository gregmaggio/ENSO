<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         metadata-complete="true">

	<display-name>ENSO</display-name>
	
	<listener>
		<listener-class>ca.datamagic.enso.servlet.ENSOContextListener</listener-class>
	</listener>

	<servlet>
        <servlet-name>Cache</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.CacheServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ranges</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.RangesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Years</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.YearsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buckets</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.BucketsServlet</servlet-class>
    </servlet>    
	<servlet>
        <servlet-name>SwaggerUI</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.SwaggerUIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerResources</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.SwaggerResourcesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerAPI</servlet-name>
        <servlet-class>ca.datamagic.enso.servlet.SwaggerAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cache</servlet-name>
        <url-pattern>/api/cache</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ranges</servlet-name>
        <url-pattern>/api/ranges</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Years</servlet-name>
        <url-pattern>/api/years</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buckets</servlet-name>
        <url-pattern>/api/buckets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SwaggerUI</servlet-name>
        <url-pattern>/swagger-resources/configuration/ui</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerResources</servlet-name>
        <url-pattern>/swagger-resources</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerAPI</servlet-name>
        <url-pattern>/v2/api-docs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>swagger-ui.html</welcome-file>
    </welcome-file-list>
</web-app>

